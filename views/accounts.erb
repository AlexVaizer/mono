<div class='w3-container w3-margin-bottom' style='width:100%;'>
	<h1>Accounts:</h1>
	<ul class="w3-ul w3-card-4" style='max-width: 700px; min-width: 340px'>
		<% @object.accounts.each do |account| %>
		    <a href="./?id=<%=account[:id]%>">
			    <li class="w3-bar w3-hover-<%=@hover_color%>">
					<img src="./public/<%=account[:currencyCode]%>.png" class="w3-bar-item w3-circle w3-hide-small" style="width:81px">
					<div class="w3-bar-item">
					<span class="w3-large w3-left account-name"><%= account[:maskedPanFull] %></span><br>
					<span class='w3-left' style="text-align: left;">
						<%= account[:balance]%> 
			        	<%=account[:currencyCode]%> 
			        	<b><%=account[:type]%></b>
			        </span>
			      </div>
			    </li>
			</a>
	    <% end %>
	</ul>
</div>



